@model Front.Models.ClienteVM
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{

    <h1>Crear Cliente</h1>
}
else
{
    <h1>Editar Cliente</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Upsert" asp-controller="Cliente" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="mb-2">
                    <label class="form-label" asp-for="Nombre">Nombre</label>
                    <input class="form-control form-control-sm" asp-for="Nombre" type="text" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Apellido">Apellido</label>
                    <input class="form-control form-control-sm" asp-for="Apellido" type="text" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="FechaDeNacimiento">Fecha Nacimiento</label>
                    <input class="form-control form-control-sm" asp-for="FechaDeNacimiento" type="date" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Cuit">Cuit</label>
                    <input class="form-control form-control-sm" asp-for="Cuit" type="text" />
                </div>
            </div>
            <div class ="row">
                <div class="mb-2">
                    <label class="form-label" asp-for="Domicilio">Domicilio</label>
                    <input class="form-control form-control-sm" asp-for="Domicilio" type="text" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Celular">Celular</label>
                    <input class="form-control form-control-sm" asp-for="Celular" type="text" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control form-control-sm" asp-for="Email" type="text" />
                </div>
            </div>

            <div class="mb-2">

                @if (Model.Id == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Cliente">Volver</a>

            </div>

        </form>

    </div>
</div>